<idea-plugin require-restart="false">
    <id>com.github.siropkin.kursor</id>
    <name>Kursor</name>
    <vendor email="ivan.seredkin@gmail.com">Ivan Seredkin</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable
                parentId="tools"
                instance="com.github.siropkin.kursor.KursorSettingsConfigurable"
                id="com.github.siropkin.kursor.KursorSettingsConfigurable"
                displayName="Kursor"
        />
        <applicationService serviceImplementation="com.github.siropkin.kursor.KursorSettings"/>
        <postStartupActivity implementation="com.github.siropkin.kursor.KursorStartupActivity" />
    </extensions>
</idea-plugin>
